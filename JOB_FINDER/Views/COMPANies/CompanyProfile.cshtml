@model JOB_FINDER.Models.COMPANY

@{
    ViewBag.Title = "CompanyProfile";
}

<div class="container">
    <div class="row" style="padding-top: 60px; padding-bottom: 50px;">
        <div class="col-md-4" style=" margin-top: 75px;font-size: 20px;">
            <ul class="list-group">
                <li class="list-group-item">@Html.ActionLink("See your previous posts?", "SeePrevPostst", new { id = Model.CompanyID })</li>
                <li class="list-group-item">@Html.ActionLink("Create Post", "Create", "POSTs")</li>
                <li class="list-group-item">@Html.ActionLink("Recruit", "Index", "USERs")</li>
                <li class="list-group-item">@Html.ActionLink("Update Password", "UpdatePassword", "COMPANies")</li>
                <li class="list-group-item">@Html.ActionLink("SignOut", "SignOut", "COMPANies")</li>
            </ul>
        </div>
        <div class="col-md-8">
            <div style="margin-left: 150px;">
                <dl>

                    <dd style="color: #1ba94c; font-size: 45px;">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        About
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        Office Address
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        Phone
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        Company Email
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>

