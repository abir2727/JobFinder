@model JOB_FINDER.Models.TempCompany

@{
    ViewBag.Title = "Login";
    var msg = ViewBag.LoginFailed;
}

<div class="container">
    <div class="row" style="padding-bottom: 80px;">
        <div class="col-md-8" style="padding-top: 40px; text-align: center;">
            <img style="height: 350px;" src="~/images/onlinelogomaker-092221-2227-9311.svg">
        </div>
        <div class="col-md-4" style="color: #1ba94c; padding-top: 75px; font-size: 18px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal" style="color: #1ba94c;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <p>Email</p>
                    <div class="">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Password</p>
                    <div class="">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="">
                        <input type="submit" value="Login" class="btn btn-default" style="background-color: #1ba94c; color: white;" />
                    </div>
                </div>

                <div class="form-group">
                    <a href="/COMPANies/ForgotPassword" style="color: #1ba94c; text-decoration: none;">Forgot Password?</a>
                </div>

                <div class="form-group">
                    <div class="">
                        <a href="/COMPANies/SignUp" style="color: #1ba94c; text-decoration: none;">Don't have an account?</a>
                    </div>
                </div>

            </div>
            }
        </div>
    </div>
</div>

@if (msg != null)
{
    <p class="text-danger">@msg</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
