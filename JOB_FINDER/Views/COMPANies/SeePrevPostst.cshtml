@model IEnumerable<JOB_FINDER.Models.POST>

@{
    ViewBag.Title = "SeePrevPostst";
}

<h2 class="text-center" style="margin-bottom: 35px; margin-top: 35px;">Your previous posts</h2>

<table class="table text-left" style="font-size: 23px;">

    @if (Model.Count() == 0)
    {
        <div class="form-group text-center" style="margin-top: 75px; margin-bottom: 40px;">
            <p style="font-size: 50px;" class=text-danger>You haven't posted anything yet!</p>
        </div>

        <div class="form-group text-center" style="margin-bottom: 50px;">
            <img style="height: 300px;" src="~/images/onlinelogomaker-101321-0450-4374.png">
        </div>
    }
    else
    {


        <div class="container" style="margin-top: 15px; margin-bottom: 15px; border: 0.5px solid #e2e0e0; border-radius: 10px; box-shadow: 1.5px 1.5px 1.5px 1.5px #ded8d8; padding: 15px;">
            <div class="row" style="padding: 5px;">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <h3 class="card-title" style="color: #1ba94c;">@Html.DisplayFor(modelItem => item.Description)</h3>
                        <p class="card-text">@Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(modelItem => item.Location)</p>
                        <p class="card-text">@Html.DisplayNameFor(model => model.Experience): @Html.DisplayFor(modelItem => item.Experience) Years</p>
                        <p class="card-text">@Html.DisplayNameFor(model => model.Salary): @Html.DisplayFor(modelItem => item.Salary) Tk.</p>
                        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "ApplicationJoinedUser", new { id = item.PostID })'">See Applications</button>
                    </div>
                }
            </div>
        </div>
    }

</table>

