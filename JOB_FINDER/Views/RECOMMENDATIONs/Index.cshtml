@model IEnumerable<JOB_FINDER.Models.RECOMMENDATION>

@{
    ViewBag.Title = "Index";
}

@if (Model.Count() == 0)
{
    <div class="form-group text-center" style="margin-top: 75px; margin-bottom: 40px;">
        <p style="font-size: 50px;" class=text-danger>No recommendations yet!</p>
    </div>

    <div class="form-group text-center" style="margin-bottom: 50px;">
        <img style="height: 300px;" src="~/images/onlinelogomaker-101321-0450-4374.png">
    </div>
}
else
{
    <h3 class="text-center" style="margin-top: 75px; margin-bottom: 50px;">This user has @Model.Count() Recommendations</h3>
    foreach (var item in Model)
    {
        <div class="container" style="margin-top: 15px; margin-bottom: 15px; border: 0.5px solid #e2e0e0; border-radius: 10px; box-shadow: 1.5px 1.5px 1.5px 1.5px #ded8d8; padding: 15px;">
            <div class="" style="color: #1ba94c; padding: 5px; font-size: 25px;">
                @Html.DisplayFor(modelItem => item.COMPANY.Name)
            </div>
            <div class="" style="padding: 5px;">
                <div>Written on: <text class="text-danger">@Html.DisplayFor(modelItem => item.RecommendationDate)</text></div>
                <h3 class="card-title">@Html.DisplayFor(modelItem => item.Description)</h3>
            </div>
        </div>
    }
}

