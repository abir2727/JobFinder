@model JOB_FINDER.Models.RECOMMENDATION

@{
    ViewBag.Title = "Create";
}

<h3 class="text-center">Write a recommendation for <text style="color: #1ba94c;"> @ViewBag.UserName</text></h3>

<div class="container">
    <div class="row" style="padding-bottom: 20px;">
        <div class="col-md-7" style="padding-top: 50px;">
            <img style="height: 400px;" src="~/images/onlinelogomaker-092321-0009-0984.svg">
        </div>
        <div class="col-md-5" style="color: #1ba94c; padding-top: 150px; font-size: 18px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="">

                            @Html.TextAreaFor(model => model.Description, 4, 12, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="">
                            <input type="submit" value="Save" class="btn" style="color: white; background-color: #1ba94c;" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyID, "CompanyID", htmlAttributes: new { @class = "control-label col-md-2", @style = "visibility:hidden" })
                        <div class="">
                            @Html.EditorFor(model => model.CompanyID, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.CompanyID, @style = "visibility:hidden" } })
                            @Html.ValidationMessageFor(model => model.CompanyID, "", new { @class = "text-danger", @style = "visibility:hidden" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserID, "UserID", htmlAttributes: new { @class = "control-label col-md-2", @style = "visibility:hidden" })
                        <div class="">
                            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.UserID, @style = "visibility:hidden" } })
                            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger", @style = "visibility:hidden" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RecommendationDate, htmlAttributes: new { @class = "control-label col-md-2", @style = "visibility:hidden" })
                        <div class="">
                            @Html.EditorFor(model => model.RecommendationDate, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Date, @style = "visibility:hidden" } })
                            @Html.ValidationMessageFor(model => model.RecommendationDate, "", new { @class = "text-danger", @style = "visibility:hidden" })
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
