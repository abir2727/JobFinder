@model JOB_FINDER.Models.POST

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center" style="margin-top: 50px; margin-bottom: 50px; color: #1ba94c;">Post a vacancy for your company!</h2>

<div class="container">
    <div class="row" style="padding-bottom: 80px;">
        <div class="col-md-6" style="padding-top: 150px; text-align: center;">
            <img style="height: 175px;" src="~/images/onlinelogomaker-092221-2355-3250.png">
        </div>
        <div class="col-md-6" style="color: #1ba94c; padding-top: 75px; font-size: 18px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <p>How much salary?</p>
                        <div class="">
                            @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p>Where is the location?</p>
                        <div class="">
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p>How much experience are you looking for?</p>
                        <div class="">
                            @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p>Write a messsage</p>
                        <div class="">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="">
                            <input type="submit" value="Post Vacancy" class="btn btn-default" style="color: white; background-color: #1ba94c;" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyID, "CompanyID", htmlAttributes: new { @class = "control-label col-md-2", @style = "visibility:hidden" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CompanyID, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.CompanyID, @style = "visibility:hidden" } })
                            @Html.ValidationMessageFor(model => model.CompanyID, "", new { @class = "text-danger", @style = "visibility:hidden" })
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
