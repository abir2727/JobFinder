@model JOB_FINDER.Models.USER

@{
    ViewBag.Title = "ViewProfile";
}

<div class="container">
    <div class="row" style="padding-top: 60px; padding-bottom: 50px;">
        <div class="col-md-4" style=" margin-top: 75px;font-size: 20px;">
            <ul class="list-group">
                <li class="list-group-item">@Html.ActionLink("Show Applications", "Index", "APPLICATIONs")</li>
                <li class="list-group-item">@Html.ActionLink("EditProfile", "EditProfile", "USERs")</li>
                <li class="list-group-item">@Html.ActionLink("Update Password", "UpdatePassword", "USERs")</li>
                <li class="list-group-item">@Html.ActionLink("SignOut", "SignOut", "USERs")</li>
            </ul>
        </div>
        <div class="col-md-8">
            <div style="margin-left: 150px;">
                <dl>
                    <dd style="font-size: 45px;">
                        Welcome, <text style="color: #1ba94c;">@Html.DisplayFor(model => model.Name)</text> 
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        About
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        Current Address
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        Phone
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        Personal Email
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        University
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.University)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        Special Skill
                    </dt>

                    <dd style="font-size: 15px;">
                        @Html.DisplayFor(model => model.Skill)
                    </dd>

                    <dt style="font-size: 20px; margin-top: 30px;">
                        @Html.DisplayNameFor(model => model.CV)
                    </dt>

                    <dd style="font-size: 15px;">
                        @if (@ViewBag.Message != null)
                        {
                            @ViewBag.Message
                        }
                        else
                        {
                            @Html.ActionLink("Download", "Download", "USERs", new { fileName = Model.CV }, null)
                        }
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>





