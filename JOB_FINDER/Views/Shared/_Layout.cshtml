<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">

</head>
<body>

    <div>

        <nav class="navbar navbar-expand-sm" style="font-size: 25px; margin-top: -20px; padding-top: 0px;">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Brand -->
                <a class="navbar-brand" href="/Home/Index">
                    <img class="" style="height: 75px;" src="~/images/onlinelogomaker-092221-2227-9311.svg">
                </a>
            </div>

                <!-- Links -->
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="navbar-nav" style="margin-top: 30px; padding-top: 30px;">
                        <li class="nav-item" style="margin-left: 20px; margin-right: 20px;">
                            <a href="/Home/Index" class="nav-link" style="color: #1ba94c; text-decoration: none;">Home</a>
                        </li>
                        <li class="nav-item" style="margin-left: 20px; margin-right: 20px;">
                            <a href="/POSTs/Index" class="nav-link" style="color: #1ba94c; text-decoration: none;">Search for Jobs</a>
                        </li>

                        <!-- Dropdown -->
                        <li class="nav-item dropdown" style="margin-left: 800px; margin-right: ;">
                            <a class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown" style="color: #1ba94c; text-decoration: none;">
                                Account
                            </a>

                            <div class="dropdown-menu">
                                @if (Session["company_email"] != null)
                                {
                                    <a href="/COMPANies/CompanyProfile" class="dropdown-item" style="color: #1ba94c; text-decoration: none;">Company</a>
                                }
                                else
                                {
                                    <a href="/COMPANies/SignUp" class="dropdown-item" style="color: #1ba94c; text-decoration: none;">Company</a>
                                }
                                @if (Session["Email"] != null)
                                {
                            <a href="/USERs/ViewProfile" class="dropdown-item" style="color: #1ba94c; text-decoration: none;">Job Seeker</a>
                                }
                                else
                                {
                                    <a href="/USERs/SignUp" class="dropdown-item" style="color: #1ba94c; text-decoration: none;">Job Seeker</a>
                                }
                            </div>
                        </li>
                    </ul>
                </div>
        </nav>

        @RenderBody()

        <footer style="margin-top: 150px;">
            <div class="container-fluid">
                <div class="row text-center">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <h4>Shortcuts</h4>
                        <p>Post jobs</p>
                        <p>Search Jobs</p>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <h4>Account</h4>
                        <p>Company</p>
                        <p>Job Seeker</p>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <h4>Contact Us</h4>
                        <p>+01287654321</p>
                        <p>job.finder@yahoo.com</p>
                    </div>
                </div>

                <hr class="mb-4" />

                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-12 text-center">
                        <p>&copy; Copyrights 2021 - All Rights Reserved By <strong>JobFinder</strong></p>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="text-center">
                            <ul class="list-unstyled list-inline">
                                <li class="list-inline-item">
                                    <a href="https://www.google.com/"><i class="fab fa-facebook-square"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://www.google.com/"><i class="fab fa-instagram"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://www.google.com/"><i class="fab fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>

    </div>

</body>
</html>
