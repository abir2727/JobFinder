@model JOB_FINDER.Models.REVIEW

@{
    ViewBag.Title = "Create";
}

<h3 class="text-center">Write your review for <text style="color: #1ba94c; font-size: 35px;"> @ViewBag.CompanyName</text></h3>

<div class="">
    <div>
        
        <div style="color: #1ba94c; padding-top: 75px; font-size: 18px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="" style=" margin-left: 630px;">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control form-control-full", rows = 10, cols = 40 })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="">
                            <input type="submit" value="Save" class="btn" style="color: white; background-color: #1ba94c; margin-left: 630px;" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserID, "UserID", htmlAttributes: new { @class = "control-label col-md-2", @style = "visibility:hidden" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.UserID, @style = "visibility:hidden" } })
                            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger", @style = "visibility:hidden" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyID, "CompanyID", htmlAttributes: new { @class = "control-label col-md-2", @style = "visibility:hidden" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CompanyID, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.CompanyID, @style = "visibility:hidden" } })
                            @Html.ValidationMessageFor(model => model.CompanyID, "", new { @class = "text-danger", @style = "visibility:hidden" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReviewDate, htmlAttributes: new { @class = "control-label col-md-2", @style = "visibility:hidden" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ReviewDate, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Date, @style = "visibility:hidden" } })
                            @Html.ValidationMessageFor(model => model.ReviewDate, "", new { @class = "text-danger", @style = "visibility:hidden" })
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
